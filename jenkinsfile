pipeline {
    agent any
        
    tools {
    maven 'maven' 
  }

    stages {
       stage("Git Checkout."){
          steps{
           git 'https://github.com/sriharshabalasa/flipkart.git'
           }
          }
          
           stage("build "){
          steps{
           sh "mvn -f flipkart/pom.xml clean package"
           }
          }
        
        stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://65.0.177.226:8080/')], contextPath: '', onFailure: false, war: 'flipkart/target/*.war' 
        }
      }
    }
    }
}
